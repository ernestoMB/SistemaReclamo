@model TReclamo
@{
    ViewData["Title"] = "Detalles del Reclamo";
}

<div class="tabla">
    <h4>Reclamo</h4>
    <hr/>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NombreProveedor)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NombreProveedor)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DireccionProveedor)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DireccionProveedor)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DetalleReclamo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DetalleReclamo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TelefonoProveedor)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TelefonoProveedor)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MontoReclamo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MontoReclamo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FechaIngreso)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FechaIngreso)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FechaRevision)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FechaRevision)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IdEstadoNavigation.NombreEstado)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IdEstadoNavigation.NombreEstado)
        </dd>   
    </dl>


    <h4>Avisos</h4>
    <table class="table" id="Aviso">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.TAvisos.First().DetalleAviso)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TAvisos.First().FechaIngreso)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var aviso in Model.TAvisos)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => aviso.DetalleAviso)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => aviso.FechaIngreso)
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <br/>
    <h4>Asesoría</h4>
    <table class="table" id="Asesoria">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.TAsesoria.First().MotivoAsesoria)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TAsesoria.First().FechaIngreso)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach(var asesoria in Model.TAsesoria)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => asesoria.MotivoAsesoria)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => asesoria.FechaIngreso)
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <br />
    <div>
        <a asp-action="ListaReclamo" class="btn btn-primary">Volver a la Lista</a>
    </div>
    
</div>






